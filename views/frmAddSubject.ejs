<%- include('includes/head.ejs')%>
  <link rel="stylesheet" href="/css/forms.css"/>
  <link rel="stylesheet" href="/css/grade.css"/>
</head>
<body>
    <%- include('includes/nav.ejs')%>
    <main>
        <form class="product-form" action="/admin/frmAddSubject" method="POST">
            <div class="form-control">
                <label for="subjectid">รหัสวิชา:</label>
                <input type="text" name="subjectid" id="subjectid"/>
            </div>
            <div class="form-control">
                <label for="subjectname">ชื่อวิชา:</label>
                <input type="text" name="subjectname" id="subjectname"/>
            </div>
            <div class="form-control">
                <label for="subjectcredit">หน่วยกิต:</label>
                <input type="number" step="0.01"  name="subjectcredit" id="subjectcredit"/>
            </div>
            <div class="form-control">
                <label for="grade">เกรด:</label>
                <input type="text" pattern="[A-DF+]{1-2}" name="grade" id="grade"/>
            </div>
            <div class="form-btn">
                <button class="btn" type="submit">เพิ่มวิชา</button>
            </div>
            
        </form>
    </main>
</body>
</html>